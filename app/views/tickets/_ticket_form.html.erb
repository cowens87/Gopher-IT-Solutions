<%= form_with model: @ticket, local: true do |f| %>
  <table class="ticket-form-table">
    <thead>
      <tr>
        <th colspan="2">
          üìù <%= @ticket.new_record? ? "Add New Ticket Info" : "Edit Ticket Info" %>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr class="ticket-form-row-white">
        <td class="ticket-form-cell-label">Title</td>
        <td class="ticket-form-cell-input">
          <%= f.text_field :title, class: "ticket-input" %>
        </td>
      </tr>
      <tr class="ticket-form-row-gray">
        <td class="ticket-form-cell-label">Description</td>
        <td class="ticket-form-cell-input">
          <%= f.text_field :description, class: "ticket-input" %>
        </td>
      </tr>
      <tr class="ticket-form-row-white">
        <td class="ticket-form-cell-label">Status</td>
        <td class="ticket-form-cell-input">
          <%= f.select :status,
              Ticket.statuses.keys.map { |s| [s.humanize, s] },
              { selected: @ticket.status },
              class: "ticket-input" %>
        </td>
      </tr>
      <tr class="ticket-form-row-gray">
        <td colspan="2" class="ticket-submit-cell">
          <%= f.submit(@ticket.new_record? ? "üöÄ Create Ticket" : "üíæ Update Ticket",
              class: "ticket-submit-button") %>

          <%= link_to "‚ùå Cancel", @ticket.new_record? ? tickets_path : ticket_path(@ticket),
              class: "link-button link-button-neutral ml-4" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>