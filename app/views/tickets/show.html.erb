<h1 class="text-2xl font-bold text-indigo-800 mb-4">
  📝 <%= @ticket.title.titleize %>
</h1>

<div class="mt-6 flex gap-4">
  <%= link_to "✏️ Edit Ticket", edit_ticket_path(@ticket),
    class: "link-button link-button-primary" %>

  <%= link_to "📋 All Tickets", tickets_path,
    class: "link-button link-button-secondary" %>
</div><br>

<table class="ticket-details-table">
  <thead>
    <tr>
      <th colspan="2" class="ticket-details-heading">Ticket Details</th>
    </tr>
  </thead>
  <tbody>
    <tr class="row-white">
      <td class="ticket-label">Status</td>
      <td class="ticket-value"><%= @ticket.status.humanize %></td>
    </tr>
    <tr class="row-gray">
      <td class="ticket-label">Description</td>
      <td class="ticket-value"><%= @ticket.description %></td>
    </tr>
    <tr class="row-white">
      <td class="ticket-label">Created</td>
      <td class="ticket-value">
        <%= @ticket.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        (<%= time_ago_in_words(@ticket.created_at) %> ago)
      </td>
    </tr>
  </tbody>
</table><br>

<div class="mt-6 flex gap-4">
  <%= button_to "🗑️ Delete Ticket", ticket_path(@ticket),
    method: :delete,
    data: { confirm: "Are you sure you want to delete this ticket?" },
    form_class: "inline",
    class: "link-button link-button-danger" %>
</div><br>
